doctype html
head
  meta(charset='UTF-8')
  title Ikloud - Login
  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css')
  link(rel='stylesheet', href='./authstyle.css')
header
  h1(style='text-align:right;padding:2%')
    a(href='http://localhost:8000/') Home
.container
  .row
    .col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2.form-wrap
      // Nav tabs
      ul.nav.nav-tabs(role='tablist')
        li.active(role='presentation')
          a(href='#login', aria-controls='login', role='tab', data-toggle='tab') Login
        li(role='presentation')
          a(href='#register', aria-controls='register', role='tab', data-toggle='tab') Register
      // Tab panes
      .tab-content
        #login.tab-pane.active(role='tabpanel')
          h3 Login to your account
          hr
          form(method='POST', action='/loginattempt', role='form')
            label.sr-only(for='user') User
            .input-group
              span.input-group-addon
                i.fa.fa-user
              input#user.form-control(name='user', type='text', placeholder='User', data-original-title='', title='')
            br
            label.sr-only(for='inputPassword') Password
            .input-group
              span.input-group-addon
                i.fa.fa-lock
              input#inputPassword.form-control(name='password',type='password', placeholder='Password')
            br
            button.btn.btn-primary.pull-right(type='submit') Submit
        #register.tab-pane(role='tabpanel')
          h3 Register a new account
          hr
          form(method='POST', action='registration', role='form')
            label.sr-only(for='email') Email Address
            .input-group
              span.input-group-addon
                i.fa.fa-envelope
              input#email.form-control(name='email',type='email', placeholder='Email Address', data-original-title='', title='')
            br
            label.sr-only(for='inputPassword') Password
            .input-group
              span.input-group-addon
                i.fa.fa-lock
              input#password.form-control(name='password',type='password', placeholder='Password')
            br
            button.btn.btn-primary.pull-right(type='submit') Submit
// partial
script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
script(src='./authscript.js')
